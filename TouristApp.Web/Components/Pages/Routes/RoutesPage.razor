@page "/RoutesPage"
@using AutoMapper
@using MediatR
@using TouristApp.Web.Components.Pages.Routes.RoutesComponents
@using Microsoft.AspNetCore.Components.Authorization
@inject IMediator Mediator
@inject IMapper Mapper

<AuthorizeView>
    <Authorized>
        <Tabs NavStyle="NavStyle.Pills" EnableFadeEffect="true">
            <Tab Active="true">
                <TitleTemplate>
                    <Icon Name="IconName.Bookmark"></Icon> Мои маршруты
                </TitleTemplate>
                <Content>
                    <Card>
                        <CardBody>
                            <CardText>
                                <Route
                                    Routes="_routesOfUser"
                                    FavouriteRoutes="_favouriteRoutes"
                                    UserId="_userId"
                                    Title="Мои маршруты"
                                    IsUserCreatedRoutes="true"
                                    CategoryOfRoutes="_categoryOfRoutes"
                                    RouteCategories="_routeCategories"/>
                            </CardText>
                        </CardBody>
                    </Card>
                </Content>
            </Tab>
            <Tab>
                <TitleTemplate>
                    <Icon Name="IconName.CompassFill"/> Проверенные маршруты
                </TitleTemplate>
                <Content>
                    <Card>
                        <CardBody>
                            <CardText>
                                <Route
                                    Routes="_verifiedRoutes"
                                    FavouriteRoutes="_favouriteRoutes"
                                    UserId="_userId"
                                    Title="Проверенные маршруты"
                                    IsUserCreatedRoutes="false"
                                    CategoryOfRoutes="_categoryOfRoutes"
                                    RouteCategories="_routeCategories"/>
                            </CardText>
                        </CardBody>
                    </Card>
                </Content>
            </Tab>
        </Tabs>
    </Authorized>
    <NotAuthorized>
        <NotAuthorizedComponent/>
    </NotAuthorized>
</AuthorizeView>

